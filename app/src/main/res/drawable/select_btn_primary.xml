<?xml version="1.0" encoding="utf-8"?>
<!--Selector主要是用来改变ListView和Button控件的默认背景-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/shape_btn_o" android:state_enabled="true"
          android:state_window_focused="false"/>
    <item android:drawable="@drawable/shape_btn_bo" android:state_enabled="false"
          android:state_window_focused="false"/>
    <item android:drawable="@drawable/shape_btn_bo"
          android:state_pressed="true"/>
    <item android:drawable="@drawable/shape_btn_bo" android:state_enabled="true"
          android:state_focused="true"/>
    <item android:drawable="@drawable/shape_btn_o"
          android:state_enabled="true"/>
    <item android:drawable="@drawable/shape_btn_bo"
          android:state_focused="true"/>
    <item
        android:drawable="@drawable/shape_btn_bo"/>
</selector>