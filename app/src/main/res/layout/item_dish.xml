<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item_dish_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_item_dish"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_item_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_item_dish_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_dish_name"
            android:paddingTop="5dp"
            android:textColor="@color/textColorPrimaryHint"
            android:textSize="16sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_dish_count"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_item_dish_count"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
</RelativeLayout>
